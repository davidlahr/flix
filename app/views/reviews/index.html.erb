<h1>Reviews for <%= link_to @movie.name, @movie %></h1>
<ul style="list-style: none;">
    <% @reviews.each do |r| %>
        <li> <%= link_to r.user.name, r.user %> &bull; <%=r.stars %> stars &bull; <%=r.comment %></li>
        <li><%= render "shared/stars", percent: r.stars_as_percent %> </li>
   
        <li><%= button_to "Delete",{controller: :reviews, action: 'destroy', id:r }, method: :delete %></li>


    <% end %>
<br>
    <div>
        <%= link_to "Add a Review", new_movie_review_path(@movie), class: "button" %>
    </div>

</ul>


